<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/theme_header">
        <SwitchPreferenceCompat
            android:id="@+id/fragSettings_DarkModeSwitch"
            android:icon="@drawable/swap_img_foreground"
            app:dependency="Theme"
            app:key="Theme"
            app:summaryOff="@string/change_theme_off"
            app:summaryOn="@string/change_theme_on"
            app:title="@string/change_theme_title" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/privacy_header">

        <EditTextPreference
            android:id="@+id/fragSettings_ChangePassword"
            android:icon="@drawable/lock_img_foreground"
            app:key="Password"
            app:title="@string/password_change_title" />

        <Preference
            android:id="@+id/fragSettings_changeDetails"
            android:background="#686868"
            android:backgroundTint="#686868"
            android:icon="@drawable/ic_change_details"
            android:key="Change user details"
            android:summary="Change user details"
            android:title="Change user details" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/language_header">

        <SwitchPreferenceCompat
            android:id="@+id/fragSettings_ChangeLanguage"
            android:icon="@drawable/language_img_foreground"
            app:key="Language"
            app:title="@string/language_change_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/signOut">

        <Preference
            android:id="@+id/fragSettings_signOut"
            android:background="#686868"
            android:backgroundTint="#686868"
            android:icon="@drawable/ic_sign_out"
            android:key="@string/signOut"
            android:summary="@string/signOut"
            android:title="@string/signOut" />
    </PreferenceCategory>

</PreferenceScreen>
